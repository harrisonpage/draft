<!DOCTYPE html>
<html>
<head>
    <title>{{ .Title }} – {{ .Key }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <meta name="author" content="{{ .Config.Author }}"/>
    <meta name="copyright" content="{{ .Config.Copyright }}"/>
    <meta name="revision" content="draft/{{ .Version }}"/>
    <meta name="updated" content="{{ .Now }}"/>
    <link rel="alternate" type="application/rss+xml" title="{{ .Title }}" href="{{ .Config.Links.RSS }}"/>
    {{- if .Config.CSSFiles }}
        {{- range .Config.CSSFiles }}
    <link rel="stylesheet" href="{{ . }}">
        {{- end }}
    {{- end }}
    {{- if .Config.JSFiles }}
        {{- range .Config.JSFiles }}
    <script src="{{ . }}"></script>
        {{- end }}
    {{- end }}
    <meta name="robots" content="index,follow"/>
</head>
<body>
    <header>
        <h1>{{ .Config.BlogName }}</h1>
        <h2>Posts Tagged "{{ .Key }}"</h2>
        <p><a href="../index.html">{{ .Config.BackLabel }}</a></p>
    </header>
    <main>
        <ul>
        {{ range $tag, $posts := .Tags }}
            <li>
                <h2><a href="./{{ $tag }}/index.html">{{ $tag }}</a></h2>
                <p>{{ len $posts }} post(s) tagged with "{{ $tag }}"</p>
                <ul>
                {{ range $posts }}
                    <li><a href="../{{ .Link }}.html">{{ .Title }}</a></li>
                {{ end }}
                </ul>
            </li>
        {{ end }}
        </ul>
    </main>
    <footer>
        <a href="{{ .Config.Links.Tags }}">Tags</a> |<a href="{{ .Config.Links.RSS }}">RSS</a> | &copy; {{ .Config.Copyright }} | Built with <a href="https://github.com/harrisonpage/draft">Draft</a> Version {{ .Version }}
    </footer>
</body>
</html>

